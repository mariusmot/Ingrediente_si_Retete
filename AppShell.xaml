<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Ingrediente_si_Retete.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Ingrediente_si_Retete"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Acasa"
            ContentTemplate="{DataTemplate local:MainPage}"
            />
        <ShellContent
            Title="Ingrediente"
            ContentTemplate="{DataTemplate local:IngredientsPage}"
            />
        <ShellContent
            Title="Retete"
            ContentTemplate="{DataTemplate local:RecipesPage}"
            />
        <ShellContent
            Title="Cauta Retete"
            ContentTemplate="{DataTemplate local:RecipeFinder}"
            />
    </TabBar>

</Shell>