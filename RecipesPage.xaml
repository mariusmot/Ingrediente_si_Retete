<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ingrediente_si_Retete.RecipesPage"
             Title="Retete">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Adauga reteta"
                     Clicked="OnAddRecipeClicked" />
    </ContentPage.ToolbarItems>

    <StackLayout Margin="20">
        <Editor x:Name="nameEditor"
                Placeholder="Numele retetei"
                HeightRequest="50" />

        <Editor x:Name="instructionsEditor"
                Placeholder="Instructiuni de preparare"
                HeightRequest="100"
                Margin="0,10,0,0"/>

        <Editor x:Name="prepTimeEditor"
                Placeholder="Timp de preparare (minute)"
                HeightRequest="50"
                Margin="0,10,0,0"/>

        <Grid ColumnDefinitions="*,*" Margin="0,10,0,10">
            <Button Text="Salveaza"
                    Clicked="OnSaveButtonClicked" />
            <Button Grid.Column="1"
                    Text="Sterge"
                    Clicked="OnDeleteButtonClicked"/>
        </Grid>

        <ListView x:Name="listView"
                  Margin="0,20,0,0"
                  ItemSelected="OnListViewItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" 
                             Detail="{Binding PrepTime}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>