<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ingrediente_si_Retete.IngredientsPage"
             Title="Ingrediente disponibile">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Adauga ingredient"
                     Clicked="OnAddIngredientClicked" />
    </ContentPage.ToolbarItems>

    <StackLayout Margin="20">
        <Editor x:Name="ingredientEditor"
                Placeholder="Introduceti numele ingredientului"
                HeightRequest="50" />

        <Grid ColumnDefinitions="*,*" Margin="0,10,0,10">
            <Button Text="Salveaza"
                    Clicked="OnSaveButtonClicked" />
            <Button Grid.Column="1"
                    Text="Sterge"
                    Clicked="OnDeleteButtonClicked"/>
        </Grid>

        <ListView x:Name="listView"
                  Margin="0,20,0,0"
                  ItemSelected="OnListViewItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>